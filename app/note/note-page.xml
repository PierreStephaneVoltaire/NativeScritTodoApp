    <Page.actionBar>
        <ActionBar title="Note" icon="" class="action-bar">
        
        </ActionBar>
    </Page.actionBar>
    <StackLayout class="p-20" orientation="vertical">
    <label text="Title"/>
   <TextField text="{{ title }}" hint="enter the title"/>
   <label text="tasks"/>
 <TextView text="{{ tasks}}" hint="enter tasks" />
